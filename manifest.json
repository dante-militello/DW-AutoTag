{
  "manifest_version": 3,
  "name": "JIRA Auto-Tag",
  "version": "1.0.0",
  "description": "Automatically insert user tags and replace them with avatars in JIRA",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://jira-iti.dat/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://jira-iti.dat/*"],
      "js": ["src/content/form-hijack.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://jira-iti.dat/*"],
      "js": ["src/content/ticket-renderer.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "JIRA Auto-Tag"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
