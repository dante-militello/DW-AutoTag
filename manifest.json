{
  "manifest_version": 3,
  "name": "DW AutoTag",
  "description": "Auto-tagging de usuarios en Jira para el equipo DW",
  "version": "1.2.0",
  "icons": {
    "16": "assets/icon-16.svg",
    "48": "assets/icon-48.svg",
    "128": "assets/icon-128.svg"
  },
  "permissions": [],
  "host_permissions": [
    "*://jira-iti.dat/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://jira-iti.dat/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
